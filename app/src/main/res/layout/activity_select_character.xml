<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.joejungle.game.ViewController.newCharacter.SelectCharacter">


    <ImageButton
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:id="@+id/imageButton"
        android:src="@drawable/kronus"
        android:layout_marginLeft="0dp"
        android:clickable="true"
        android:onClick="KronosSelect"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="77dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Kronos"
        android:id="@+id/textView2"
        android:layout_marginEnd="38dp"
        android:layout_below="@+id/imageButton"
        android:layout_alignEnd="@+id/imageButton" />

    <ImageButton
        android:layout_width="170dp"
        android:layout_height="190dp"
        android:id="@+id/imageButton2"
        android:src="@drawable/uranus"
        android:layout_marginEnd="64dp"
        android:layout_above="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:onClick="UranusSelect"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Uranus"
        android:id="@+id/textView3"
        android:layout_below="@+id/imageButton"
        android:layout_alignStart="@+id/imageButton2"
        android:layout_marginStart="48dp" />

</RelativeLayout>
